<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/dialog_layout"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:background="@color/toaster_error">


    <ImageView
        android:id="@+id/dialog_icon"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_centerVertical="true"
        app:srcCompat="@drawable/ic_check_circle_green_24dp"
        android:layout_margin="20dp"
        android:tint="@color/md_white_1000"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toEndOf="@id/dialog_icon"
        android:layout_toRightOf="@id/dialog_icon"
        android:layout_centerVertical="true"
        android:gravity="center">

        <LinearLayout
            android:id="@+id/layout_text"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            >

            <TextView
                android:id="@+id/text_title"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Success"
                android:textSize="18dp"
                android:textStyle="bold"
                android:textColor="@color/md_white_1000"/>

            <TextView
                android:id="@+id/text_message"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Anyone with access can view your invited visitors"
                android:textColor="@color/md_white_1000"
                android:maxLines="2"
                android:ellipsize="end"/>

        </LinearLayout>


        <ImageView
            android:id="@+id/image_close"
            android:layout_width="30dp"
            android:layout_height="30dp"
            app:srcCompat="@drawable/ic_close_gray_24dp"
            android:tint="@color/md_white_1000"
            android:layout_gravity="center"
            android:layout_margin="20dp"/>

    </LinearLayout>



</RelativeLayout>