<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/popup_width_drake"
    android:minWidth="@dimen/popup_width_drake"
    android:layout_height="@dimen/popup_height_emotion"
    android:minHeight="@dimen/popup_height_emotion"
    android:layout_gravity="center"
    android:gravity="center"
    app:cardElevation="8dp"
    app:cardCornerRadius="15dp">

    <RelativeLayout
        android:id="@+id/dialog_layout_emotion"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:background="@drawable/background_emotion_success"
        android:padding="20dp">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/img_icon_emotion"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:gravity="center"
            android:orientation="horizontal"
            app:srcCompat="@drawable/smiley_success"
            android:clickable="true"
            android:focusable="true"
            android:layout_marginEnd="20dp"
            android:layout_marginRight="20dp" />

        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/layout_text_emotion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_toEndOf="@id/img_icon_emotion"
            android:layout_toRightOf="@id/img_icon_emotion"
            android:layout_toLeftOf="@id/dialog_hour_emotion">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/dialog_title_emotion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Success !"
                android:maxLines="1"
                android:ellipsize="end"
                android:textSize="26sp"
                android:textStyle="bold"
                android:textColor="@color/md_white_1000"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/dialog_message_emotion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Your message was delivered successfully"
                android:maxLines="2"
                android:ellipsize="end"
                android:textColor="@color/md_white_1000"/>

        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/dialog_hour_emotion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:text="13:56"
            android:textColor="@color/md_white_1000"
            android:layout_alignParentRight="true" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>